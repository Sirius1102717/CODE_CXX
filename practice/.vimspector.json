{
  "configurations": {
    "gdb:launch": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "name": "gcc - Build and debug active file",
        "type": "cppdbg",
        "request": "launch",
        "program": "${fileDirname}/${fileBasenameNoExtension}",
        "args": [
          "-std=c++20",
          "-stdlib=libc++",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": true,
        "stopAtEntry": true,
        "MIMode": "gdb",
        "setupCommands": [
          {
            "description": "Enable pretty-printing for gdb",
            "text": "-enable-pretty-printing",
            "ignoreFailures": true
          }
        ],
        "logging": {
          "engineLogging": false
        }
      }
    },
    "lldb:launch": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "name": "clang++ build active file",
        "type": "shell",
        "request": "launch",
        "program": "${fileDirname}/${fileBasenameNoExtension}",
        "args": [
          "-std=c++20",
          "-stdlib=libc++",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "cwd": "${workspaceRoot}",
        "environment": [],
        "externalConsole": true,
        "stopAtEntry": true,
        "MIMode": "lldb",
        "logging": {
          "engineLogging": false
        }
      }
    },
    "gdb:attach": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "name": "cpp",
        "type": "cppdbg",
        "request": "attach",
        "program": "${fileDirname}/${fileBasenameNoExtension}",
        "MIMode": "gdb"
      }
    },
    "lldb:attach": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "name": "cpp",
        "type": "cppdbg",
        "request": "attach",
        "program": "${fileDirname}/${fileBasenameNoExtension}",
        "MIMode": "lldb"
      }
    },
    "lldb-vscode:launch": {
        "lldb-vscode": {
          "variables": {
            "LLVM": {
              "shell": "brew --prefix llvm"
            }
          },
          "attach": {
            "pidProperty": "pid",
            "pidSelect": "ask"
          },
          "command": [
            "${LLVM}/bin/lldb-vscode"
          ],
          "env": {
            "LLDB_LAUNCH_FLAG_LAUNCH_IN_TTY": "YES"
          },
          "name": "lldb"
        }
      }


  }
}
