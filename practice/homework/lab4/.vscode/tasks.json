{
    "tasks": [
        {
            "type": "shell",
            "label": "C/C++: clang build active file",
            "command": "/usr/local/bin/clang++",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-stdlib=libc++",
                "-std=c++20",
                "-fuse-ld=lld",
                "-pthread",
                "-fstandalone-debug",
                "-Wextra",
                "-fcolor-diagnostics",
                "-fparse-all-comments",
                "-fno-limit-debug-info"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}