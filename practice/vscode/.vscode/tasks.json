{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: clang++-10 build active file",
            "command": "/usr/bin/clang++-10",
            "args": [
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-fno-limit-debug-info"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
