

{
  "configurations": {
    "Launch ": {
      "adapter": "vscode-cpptools",
      "configuration": {
        "request": "launch",
        "program": "${fileDirname}/${fileBasenameNoExtension}",
        "args": [
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "cwd": "${fileDirname}",
        "environment": [],
        "externalConsole": false,
        "MIMode": "lldb"
      },
      "Attach": {
        "adapter":"vscode-cpptools",
        "configuration": {
          "request":"attach",
          "program":"${fileDirname}/${fileBasenameNoExtension}",
          "MIMode":"lldb"
        }
      }
    }
  }
}